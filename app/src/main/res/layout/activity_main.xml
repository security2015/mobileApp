<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    >

    <TextView android:text="@string/title" android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="70dp"
        android:textSize="45sp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textStyle="bold"
        android:textColor="@color/hexid_gray"
        android:typeface="sans"
        android:id="@+id/textViewAppTitle" />
    <View
        android:layout_below="@+id/textViewAppTitle"
        android:background="@color/hexid_orange"
        android:layout_centerHorizontal="true"
        android:layout_width="50sp"
        android:layout_height="5dp"
        android:layout_marginTop="20sp"
        android:layout_weight="2"
        >
    </View>

    <TextView
        android:id="@+id/textViewFileName"
        android:layout_below="@+id/textViewAppTitle"
        android:layout_marginTop="100sp"
        android:layout_width="wrap_content"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:hint="Search"
        android:paddingLeft="20sp"
        android:paddingRight="20sp"
        android:textSize="20sp"
        android:gravity="center"
        android:layout_centerHorizontal="true"
        android:singleLine="false"
        android:textAlignment="center"
         />
    <View
        android:id="@+id/prettyLine"
        android:layout_below="@+id/textViewFileName"
        android:background="@color/hexid_orange"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="7dp"
        android:layout_width="100sp"
        android:layout_height="2dp"
        android:layout_weight="2"
        >
    </View>

    <ImageButton
        android:id="@+id/buttonExplore"
        android:background="@drawable/search_icon"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:text="@string/exploreButton"
        android:onClick="openExplorer"
        android:layout_below="@+id/prettyLine"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10sp"
        />
    <Button
        android:id="@+id/buttonCheck"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/checkButton"
        android:textStyle="bold"
        android:textColor="@color/switch_thumb_normal_material_light"
        android:layout_below="@+id/buttonExplore"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40sp"
        android:background="@drawable/selector_button"
       />

</RelativeLayout>
